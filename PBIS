    // Quiz Display Function
    function displayQuiz(questions, containerId, quizType) {
        const container = document.getElementById(containerId);
        if (!container) {
            console.error(`Quiz container with id "${containerId}" not found.`);
            return;
        }
        container.innerHTML = ''; // Clear previous questions
        questions.forEach((q, index) => {
            const questionDiv = document.createElement('div');
            questionDiv.className = 'bg-white p-6 rounded-lg shadow-lg';

            if (q.scenario) {
                const scenarioP = document.createElement('p');
                scenarioP.className = 'mb-4 text-slate-700 font-medium';
                scenarioP.textContent = q.scenario;
                questionDiv.appendChild(scenarioP);
            }

            const questionP = document.createElement('p');
            questionP.className = 'text-lg font-semibold mb-4';
            questionP.textContent = `${index + 1}. ${q.question}`;
            questionDiv.appendChild(questionP);

            const optionsDiv = document.createElement('div');
            optionsDiv.className = 'space-y-3';
            q.options.forEach(option => {
                const label = document.createElement('label');
                label.className = 'flex items-center p-3 rounded-md border border-slate-300 cursor-pointer quiz-option';
                const input = document.createElement('input');
                input.type = 'radio';
                input.name = `${quizType}Question${index}`;
                input.value = option;
                input.className = 'mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-slate-300';
                label.appendChild(input);
                label.appendChild(document.createTextNode(option));
                optionsDiv.appendChild(label);
            });
            questionDiv.appendChild(optionsDiv);
            container.appendChild(questionDiv);
        });
    }

    // Quiz Submission Handling Function
    function handleSubmitQuiz(questions, containerId, scoreId, feedbackId, quizType) {
        let score = 0;
        const feedbackContainer = document.getElementById(feedbackId);
        const quizContainer = document.getElementById(containerId);

        if (!feedbackContainer || !quizContainer) {
            console.error("Quiz elements not found for handling submission.");
            return;
        }
        feedbackContainer.innerHTML = ''; // Clear previous feedback

        questions.forEach((q, index) => {
            const questionElement = quizContainer.children[index];
            if (!questionElement) return;

            const selectedOption = questionElement.querySelector(`input[name="${quizType}Question${index}"]:checked`);
            const optionElements = questionElement.querySelectorAll('label');
            
            optionElements.forEach(optLabel => {
                optLabel.classList.remove('correct-answer', 'incorrect-answer', 'selected-answer');
            });
            
            const oldExplanation = questionElement.querySelector('.explanation-text');
            if (oldExplanation) {
                oldExplanation.remove();
            }
            
            const explanationP = document.createElement('p');
            explanationP.className = 'explanation-text mt-2 p-2 rounded text-sm';

            if (selectedOption) {
                const parentLabel = selectedOption.parentElement;
                parentLabel.classList.add('selected-answer');
                if (selectedOption.value === q.answer) {
                    score++;
                    parentLabel.classList.add('correct-answer');
                    explanationP.classList.add('bg-green-50', 'text-green-700');
                } else {
                    parentLabel.classList.add('incorrect-answer');
                    explanationP.classList.add('bg-red-50', 'text-red-700');
                    optionElements.forEach(optLabel => {
                        const radioInput = optLabel.querySelector('input');
                        if (radioInput.value === q.answer) {
                           optLabel.classList.add('correct-answer');
                        }
                    });
                }
                explanationP.innerHTML = `<strong>Explanation:</strong> ${q.explanation}`;
            } else {
                explanationP.classList.add('bg-yellow-50', 'text-yellow-700');
                explanationP.innerHTML = `<strong>No answer selected.</strong> The correct answer is highlighted. <br><strong>Explanation:</strong> ${q.explanation}`;
                optionElements.forEach(optLabel => {
                    const radioInput = optLabel.querySelector('input');
                    if (radioInput.value === q.answer) {
                       optLabel.classList.add('correct-answer');
                    }
                });
            }
            questionElement.appendChild(explanationP);
        });

        const scoreDisplay = document.getElementById(scoreId);
        if (scoreDisplay) {
            scoreDisplay.textContent = `Your Score: ${score} out of ${questions.length}`;
        }
    }

    // Back to Top Function
    function scrollToTop() {
        window.scrollTo({top: 0, behavior: 'smooth'});
    }

    // --- Main Script Logic on DOMContentLoaded ---
    document.addEventListener('DOMContentLoaded', () => {
        // Navigation Link Handling
        const navLinks = document.querySelectorAll('nav a[href^="#"]');
        navLinks.forEach(link => {
            link.addEventListener('click', function(event) {
                event.preventDefault(); 
                const targetId = this.getAttribute('href');

                if (!targetId || !targetId.startsWith('#') || targetId.length <= 1) {
                    console.warn("Invalid href for navigation:", targetId);
                    // If href is just "#" or invalid, scroll to top smoothly as a fallback
                    if (targetId === "#") window.scrollTo({ top: 0, behavior: 'smooth' });
                    return; 
                }

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    const navbar = document.querySelector('nav');
                    const navbarHeight = navbar ? navbar.offsetHeight : 0;
                    
                    // Option 1: Using scrollIntoView (simpler)
                    // targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    // Adjust for navbar after scrollIntoView (can be tricky due to async nature)
                    // For more precise control with offset, window.scrollTo is better:

                    // Option 2: Using window.scrollTo with offset calculation
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - navbarHeight;
                    
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });

                } else {
                    console.warn(`Target element ${targetId} not found.`);
                }
            });
        });

        // Back to Top Button Visibility Logic
        const backToTopButton = document.getElementById('backToTop');
        if (backToTopButton) {
            window.onscroll = function() {
                if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                    backToTopButton.style.display = "block";
                } else {
                    backToTopButton.style.display = "none";
                }
            };
        }

        // Initialize Quizzes
        displayQuiz(generalQuizQuestions, 'generalQuizContainer', 'general');
        displayQuiz(scenarioQuizQuestions, 'scenarioQuizContainer', 'scenario');

        // Event Listeners for Quiz Submissions
        const generalQuizButton = document.getElementById('submitGeneralQuiz');
        if (generalQuizButton) {
            generalQuizButton.addEventListener('click', () => {
                handleSubmitQuiz(generalQuizQuestions, 'generalQuizContainer', 'generalQuizScore', 'generalQuizFeedback', 'general');
            });
        }

        const scenarioQuizButton = document.getElementById('submitScenarioQuiz');
        if (scenarioQuizButton) {
            scenarioQuizButton.addEventListener('click', () => {
                handleSubmitQuiz(scenarioQuizQuestions, 'scenarioQuizContainer', 'scenarioQuizScore', 'scenarioQuizFeedback', 'scenario');
            });
        }
    });
</script>

</body>
</html>
